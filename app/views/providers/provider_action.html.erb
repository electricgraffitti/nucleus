<%= render :partial => 'providers/action_page_header' %>
<div id="panel_layout">
  <div id="panel_main" class="panel ui-layout-center">
    <div class="panel_set">
      <div class="basic_panel">
        <h3>Provider Name: <span>John Doe</span></h3>
        <div id="provider_rating" class="red_rating">99</div>
      </div>
      <div class="basic_panel provider_stats">
        <div class="panel_left">
          <div class="panel_item">          
            <div class="panel_item_title">Provider Sequence</div>
            <div class="panel_item_value">101896</div>
          </div>
          <div class="panel_item">          
            <div class="panel_item_title">TIN</div>
            <div class="panel_item_value">391824445</div>
          </div>
          <div class="panel_item">          
            <div class="panel_item_title">Group Name</div>
            <div class="panel_item_value">UW Medical Foundation</div>
          </div>
        </div>
        <div class="panel_right">
          <div class="panel_item">          
            <div class="panel_item_title">Primary Speciality</div>
            <div class="panel_item_value">37</div>
          </div>
          <div class="panel_item">          
            <div class="panel_item_title">State</div>
            <div class="panel_item_value">WI</div>
          </div>
          <div class="panel_item">          
            <div class="panel_item_title">Group TIN</div>
            <div class="panel_item_value">391824445</div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel_set">
      <%= render :partial => 'provider_action_stats' %>
    </div>
    <div class="panel_set">
      <div class="basic_panel">
        <div id="provider_results_chart" class="clear left"></div>
      </div>
    </div>
    <div id="panel_south" class="ui-layout-south">
      <div id="south_resizer">
        <div class="resize_horz"></div>
        <div class="drag_row"><span>Drag & drop a column header here to group by that column.</span></div>
        <div id="provider_search_table">
          <table id="provider_search">
            <thead>
              <tr>
                <th>Score</th>
                <th>Note</th>
                <th>Prv Seq</th>
                <th>Provider Name</th>
                <th>TIN</th>
                <th>Spec</th>
                <th>Group Name</th>
                <th>State</th>
                <th>CIU Alerts</th>
                <th>Condition Suspect</th>
                <th>HCI Flagged</th>
              </tr>
            </thead>
            <tbody>
              <% 10.times do %>
              <tr class='<%=cycle('even', 'odd')%>'>
                <td class="provider_search_score"><div class="table_rating_dot green_dot"></div>100</td>
                <td class="provider_search_note"><%= link_to '<div class="table_note"></div>', '#' %></td>
                <td class="provider_search_prv_seq">101896<div class="table_lock"></td>
                <td class="provider_search_provider_name">John Doe</td>
                <td class="provider_search_tin">391824445</td>
                <td class="provider_search_spec">37</td>
                <td class="provider_search_group_name">UW Medical Foundation</td>
                <td class="provider_search_state">WI</td>
                <td class="provider_search_ciu">Yes</td>
                <td class="provider_search_condition">SBRD</td>
                <td class="provider_search_flagged"></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :javascripts do %>
  <%= javascript_include_tag 'providerSearch' %>
<% end %>