<% form_for(@provider) do |f| %>
  <%= f.error_messages %>
  <div class="form_box">
    <p>
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </p>
    <p>
      <%= f.label :tin %><br />
      <%= f.text_field :tin %>
    </p>
    <p>
      <%= f.label :sequence_number %><br />
      <%= f.text_field :sequence_number %>
    </p>
    <p>
      <%= f.label :provider_tax_id %><br />
      <%= f.text_field :provider_tax_id %>
    </p>
    <p>
      <%= f.label :provider_score %><br />
      <%= f.text_field :provider_score %>
    </p>
    <p>
      <%= f.label :state_id %><br />
      <%= collection_select(:provider, :state_id, State.all, :id, :full_name) %>
    </p>
    <p>
      <%= f.label :provider_group_id %><br />
      <%= collection_select(:provider, :provider_group_id, ProviderGroup.all, :id, :name) %>
    </p>
  </div>
  <div class="form_box">
    <% f.fields_for :locations do |location_form| %>
    <p>
      <%= location_form.label :name %><br />
      <%= location_form.text_field :name %>
    </p>
    <p>
      <%= location_form.label :address %><br />
      <%= location_form.text_area :address, :rows => 5, :cols => 27 %>
    </p>
    <p>
      <%= location_form.label :city %><br />
      <%= location_form.text_field :city %>
    </p>
    <p>
      <p>
        <%= f.label :state_id %><br />
        <%= collection_select(:locations, :state_id, State.all, :id, :full_name) %>
      </p>
    </p>
    <p>
      <%= location_form.label :zipcode %><br />
      <%= location_form.text_field :zipcode %>
    </p>
    <% end %>
  </div>
  <div class="clear"></div>
  <p>
    <%= f.submit 'Submit', :class => 'login_btn' %>
  </p>
<% end %>