            <td class="claim_patient_sequence">Patient Sequence</td>
            <td class="claim_patient">Patient #</td>
            <td class="claim_review_group">Review Group</td>
            <td class="claim_begin_dos">Begin DOS</td>
            <td class="claim_end_dos">End DOS</td>
            <td class="claim_release_date">Release Date</td>
            <td class="claim_hci_received">HCI Received Date</td>
            <td class="claim_client_received">Client Received Date</td>
