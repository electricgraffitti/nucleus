      </table>
      </div>
    </div>
    <div class="clear"></div>

</div>

<% content_for :javascripts do %>
  <%#= javascript_include_tag "providerSearch" %>
  <script>
    $(document).ready(function() {
      var $table = $("#data_table");
      app.panelLayoutHeight();
      <% if ipad? %>
      scroll.setTableScroll($table);
      <% end %>
      app.tutorialTrigger();
    });
  </script>
<% end %>