            <td class="claim_edits"></td>
            <td class="claim_reviewed">Reviewed</td>
            <td class="claim_appeal_status"></td>
            <td class="claim_provider">Edward Smith</td>
            <td class="claim_provider_sequence">202504</td>
            <td class="claim_provider_tax_id">214748364</td>
            <td class="claim_provider_number">352163791</td>
            <td class="claim_provider_group">Carma Medical</td>
            <td class="claim_provider_group_tax_id">2354671-2</td>
            <td class="claim_billed">Billed</td>
            <td class="claim_adj_paid">Adj Paid</td>
            <td class="claim_savings">Savings</td>
            <td class="claim_paient">Patient</td>
            <td class="claim_dob">DOB</td>
