            <th>Adj Paid</th>
            <th>Savings</th>
            <th>Patient</th>
            <th>DOB</th>
            <th>SSN</th>
            <th>Patient Sequence</th>
            <th>Patient #</th>
            <th>Review Group</th>
            <th>Begin DOS</th>
            <th>End DOS</th>
            <th>Release Date</th>
            <th>HCI Received Date</th>
            <th>Client Received Date</th>
            <th>Assigned To</th>
            <th>DCI Status</th>
            <th>FCI Status</th>
            <th>FFP Status</th>
            <th>PCI Status</th>
            <th>Batch ID</th>
            <th>Batch Date</th>
            <th>Pend Date</th>
          </tr>
        </thead>
        <tbody>
          <% 28.times do %>
          <tr class='<%=cycle('even', 'odd')%>'>
            <td class="claim_sequence">5882788-22</td>
            <td class="claim_number"><%= link_to "0945496302", claim_action_path %></td>
