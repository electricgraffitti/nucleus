<h1>New comment</h1>

<% form_for(@comment, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :post_id, :value => params[:post_id] %>
  <%= f.hidden_field :client_id, :value => params[:client_id] %>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.file_field :comment_attachment %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>