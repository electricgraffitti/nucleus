<%= render :partial => 'layouts/inner_page_header' %>
<div id="panel_layout">
  <div id="panel_west" class="ui-layout-west">
    <%= render :partial => 'dashboard/search' %>
    <div id="west_resizer">
      <div class="resize_vert"></div>
    </div>
  </div>
  <div id="panel_main" class="panel ui-layout-center">
    <div class="panel_set">
      <div class="basic_panel">
        <h3>Provider Results</h3>
        <div id="provider_results_chart" class="clear left"></div>
      </div>
    </div>
    <div class="panel_set">
      <div class="basic_panel">
        <h3>Provider Name: <span>John Doe</span></h3>
        <div id="provider_rating" class="red_rating">99</div>
      </div>
      <div class="combo_panel">
        <div class="sub_panel">
        <h4>Provider Sequence: <span>101896</span></h4><h4>Primary Specialty: <span>37</span></h4>
        </div>
        <div class="sub_panel">
          <div id="provider_stats">
            <div class="stat_group">
              <div class="stat_title left">Patients</div>
              <div class="stat_value left">25.7%</div>
              <div class="stat_range left">130 of 506 Patients</div>
            </div>
            <div class="stat_group">
              <div class="stat_title left">Claims</div>
              <div class="stat_value left">18.3%</div>
              <div class="stat_range left">25 of 134 Patients</div>
            </div>
            <div class="stat_group">
              <div class="stat_title left">Savings</div>
              <div class="stat_value left">23.5%</div>
              <div class="stat_range left">$12,766 of $54,326 Paid</div>
            </div>
            <div class="stat_group">
              <div class="stat_title left">Billed</div>
              <div class="stat_value left">34.2%</div>
              <div class="stat_range left">$328,728 of $983,973 Billed</div>
            </div>
          </div>
        </div>
        <div class="sub_panel last">
          <div class="right">
          <% form_tag providers_path, :method => :get do %>
            <%= collection_select(:provider_stat_date_range, :date_range_id, SearchTopic.all, :id, :name, {:prompt => "Date Range"}) %><br/>
          <% end %>
          </div>
        </div>
      </div>
    </div>
    <div id="panel_south" class="ui-layout-south">
      <div id="south_resizer">
        <div class="resize_horz"></div>
      </div>
    </div>
  </div>
</div>
