<%= render :partial => 'dashboard/dashboard_header' %>
<div id="panel_layout" class="clear">
  <div id="dashboard">
    <div id="dash1" class="top_left_dashboard graph_box">
      <div class="dashboard_module_header top_provider_block">
        Top 10 Flagged Providers by Score
      </div>
      <div id="panel_header" class="basic_panel">
       <%= render :partial => 'dashboard/dashboard_top_provider_heading', :locals => {:provider => p} %>
      </div>
      <% @top_providers.each do |p| %>
      <div id="dashboard_providers" class="dashboard_basic_panel">
        <%= render :partial => 'providers/provider_dashboard_heading', :locals => {:provider => p} %>
      </div>
      <% end %>
    </div>
    
    <div id="dash2" class="dashboard_module graph_box">
      <div class="dashboard_module_header top_provider_block">
        Provider Distribution by Score
      </div>
      <div id="scatter_chart" class="chart">

      </div>
    </div>
    
    <div id="dash3" class="dashboard_module graph_box">
      <div class="dashboard_module_header top_provider_block">
        Savings Tracker by Month
      </div>
      <div id="savings_tracker" class="chart">

      </div>
    </div>
    
    <!-- <div id="dash4" class="dashboard_module graph_box">
      <div class="dashboard_module_header top_provider_block">
        Indentified Savings vs. Accepted Savings
      </div>
      <div id="bottom_right_chart" class="chart">

      </div>
    </div> -->
    
    <div id="dash4" class="dashboard_module graph_box">
      <div class="dashboard_module_header top_provider_block">
        Provider Action Summary
      </div>
      <div id="provider_action_summary" class="chart">

      </div>
    </div>
    
    <div id="dash5" class="dashboard_module graph_box">
      <div class="dashboard_module_header top_provider_block">
        Provider Population by Risk Category
      </div>
      <div id="bottom_right_chart" class="chart">

      </div>
    </div>
    
    <div id="dash6" class="top_left_dashboard graph_box">
      <div class="dashboard_module_header top_provider_block">
        Savings Opportunities by Service
      </div>
      <div id="panel_header" class="basic_panel">
        <div class="top_provider_block saving_opp_product">Product</div>
        <div class="top_provider_block saving_opp_est">Est Savings</div>
        <div class="top_provider_block saving_opp_claims">Claims</div>
        <div class="top_provider_block saving_opp_more">Learn More</div>
      </div>
      <%= render :partial => 'dashboard/service_opportunities', :locals => {:provider => p} %>
      
    </div>

  </div>
  <div class="clear"></div>
</div>
<% content_for :javascripts do %>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      $('.scroll_nav_trigger').live('click', function(e) {
        scroll.setScroll($(this));
        e.preventDefault();
      });
      baseActions.tutorialTrigger();
        
      // Scatter Plot
      $.getScript('javascripts/data/scatterData.js');
      // Bar Graph
      $.getScript('javascripts/data/barData.js');
      // Line Chart
      $.getScript('javascripts/data/lineData.js');
      // Pie Chart
      $.getScript('javascripts/data/provider_action_summary_dashboard.js');
      
      // drag.setupDashboardPanels("#dashboard", "dashboardCookie", 1000);
      // drag.loadQuickLaunchOrder("#dashboard", "dashboardCookie");

    });
  </script>
<% end %>