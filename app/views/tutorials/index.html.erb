<h1>Listing tutorials</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Page</th>
  </tr>

<% @tutorials.each do |tutorial| %>
  <tr>
    <td><%=h tutorial.title %></td>
    <td><%=h tutorial.content %></td>
    <td><%=h tutorial.page_id %></td>
    <td><%= link_to 'Show', tutorial %></td>
    <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
    <td><%= link_to 'Destroy', tutorial, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tutorial', new_tutorial_path %>