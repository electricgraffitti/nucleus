      <div class="basic_panel_4">
        <h3 class="grey_header">Selection</h3>
        <div class="report_panel_wrap">
            <% form_tag reports_path, :method => :get do %>
              <p>
              <%= label_tag "Type*"%>
              <%= select(:report, :report_selection, @report_params.report_types) %><br/>
              </p>
              <p>
              <%= label_tag "Category*"%>
              <%= select(:report, :report_selection, @report_params.report_categories) %><br/>
              </p>
              <p>
              <%= label_tag "Sub-Category*"%>
              <%= select(:report, :report_selection, @report_params.report_sub_categories) %><br/>
              </p>
              <p>
              <%= label_tag "Description"%>
              <%= text_field_tag :provider_number, nil, :id => "report_description" %>
              </p>
            <% end %>
        </div>
      </div>