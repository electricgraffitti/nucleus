<%= render :partial => 'messages/message_header' %>
<div id="panel_layout" class="message_panels clear">
  <div class="panel ui-layout-center">
    <%= render :partial => 'messages/message_center' %>
  </div>
  <div class="panel ui-layout-east">
    <div id="profile_wrap">
      <div class="image_wrap left">
        <%= image_tag('message/avatar_darin_johnson.jpg', :alt => "Darin Johnson Avatar") %>
      </div>
      <div class="profile_info left">
        <b>Paul White</b><br/>
        Carma Medical Group<br/>
        Vice President<br/>
        Marketing<br/>
        <%= link_to "(Edit)", "", :class => "tip", :title => "Edit your profile" %>
      </div>
    </div>
    <ul id="message_categories" class="side_bar_list clear">
      <li class="basic_header message_category active">
        <span class="sidebar_icon my_feed"></span>My Feed
      </li>
      <li class="basic_header message_category">
        <span class="sidebar_icon received_messages"></span>Received
      </li>
      <li class="basic_header message_category">
        <span class="sidebar_icon direct_messages"></span>Direct Messages
      </li>
      <li class="basic_header message_category">
        <span class="sidebar_icon sent_messages"></span>Sent
      </li>
      <li class="basic_header message_category">
        <span class="sidebar_icon bookmarked"></span>Bookmarked
      </li>
      <li class="basic_header message_category">
        <span class="sidebar_icon all_messages"></span>All
      </li>
      <li class="basic_header message_category">
        <span class="sidebar_icon rss_messages"></span>RSS
      </li>
      <li class="basic_header message_category">
        <span class="sidebar_icon message_groups"></span>Groups
      </li>
      <li class="basic_header message_sub_category">Carma Marketing</li>
      <li class="basic_header message_sub_category">Carma Corporate Development</li>
      <li class="basic_header message_category">
        <span class="sidebar_icon verified_networks"></span>Verified Network
      </li>
      <div class="sidebar_panel">
        This is the official network for carmamedical.com. Only those with a verified @carmamedical.com email can join.
      </div>
    </ul>
  </div>
  <div class="clear"></div>
</div>
<% content_for :javascripts do %>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
      // Toggles the file attachment
      $('#message_attach_link').click(function() {
        $('#message_attachment').slideToggle('slow');
        return false;
      });
      // Sets Highlight for Active Message Category
      $('li.message_category').click(function() {
        baseActions.setActiveMessageGroup($(this));
      });
    });
  </script>
<% end %>
