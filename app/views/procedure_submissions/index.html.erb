<h1>Listing procedure_submissions</h1>

<table>
  <tr>
    <th>Condition</th>
    <th>Procedure</th>
    <th>Total submissions</th>
    <th>Total billed</th>
    <th>Total paid</th>
  </tr>

<% @procedure_submissions.each do |procedure_submission| %>
  <tr>
    <td><%=h procedure_submission.condition_id %></td>
    <td><%=h procedure_submission.procedure_id %></td>
    <td><%=h procedure_submission.total_submissions %></td>
    <td><%=h procedure_submission.total_billed %></td>
    <td><%=h procedure_submission.total_paid %></td>
    <td><%= link_to 'Show', procedure_submission %></td>
    <td><%= link_to 'Edit', edit_procedure_submission_path(procedure_submission) %></td>
    <td><%= link_to 'Destroy', procedure_submission, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

